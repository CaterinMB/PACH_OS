@model IEnumerable<Pach_OS.Models.DetallesCompra>

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="fw-bold" style="font-family:serif">DETALLE</h1>
</div>

<div class="container">

    <div class="row justify-content-between">
        <div class="col-4">
            <a asp-area="" class="btn btn-success" style="width: 100px; margin-bottom: 5px" asp-action="Create" asp-controller="DetallesCompras">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                Nuevo
            </a>
        </div>
    </div>

    <p></p>

    <div class="row" style="padding: 30px">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Precio
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Compra
                        </th>
                        <th>
                            Nombre Insumo
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecioInsumo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Compras.IdCompras)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Insumos.NomInsumo)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Precio
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Compra
                        </th>
                        <th>
                            Nombre Insumo
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>

</div>