@model Pach_OS.Models.DetallesCompra

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="fw-bold" style="font-family:serif">DETALLE COMPRA</h1>
</div>

<div class="container">
    <hr />
    <div class="row">

        <div class="row justify-content-between">
            <div class="col-4">
                <a asp-area="" class="btn btn-success" style="width: 100px; margin-bottom: 5px" asp-action="Create" asp-controller="Insumos">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                    </svg>
                    Nuevo
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Compra</label>
                    <input value="@ViewBag.IdCompraDll" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Insumo</label>
                    <select asp-for="InsumosId" class ="form-control" asp-items="ViewBag.InsumosId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Precio</label>
                    <input asp-for="PrecioInsumo" class="form-control" />
                    <span asp-validation-for="PrecioInsumo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Compras">Volver</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
