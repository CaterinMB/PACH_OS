@{
    ViewData["Title"] = "Home Page";
}

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">Ventas de ultimos 5 dias</div>
        <div class="card-body" >
           <canvas id="chartVentas" style="max-height:250px">

           </canvas>
        </div>
    </div>
</div>
@section Scripts{

    <script>

        function resumenVenta() {

            fetch("Home/resumenVenta")
                .then((response) => {
                    return response.ok ? response.json() : Promise.reject(response);
                })
                .then((dataJson) => {

                    // console.log((dataJson)

                    const labels = dataJson.map((item) => { return item.fecha })
                    const values = dataJson.map((item) => { return item.pago })


                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'Pago',
                            data: values,
                            backgroundColor:
                                'rgba(240, 61, 26, 0.6)',
                            borderColor:
                                'rgb(240, 61, 26, 0.6)',
                            borderWidth: 1
                        }]
                    };

                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        },
                    };


                    const canvasBarras = document.getElementById("chartVentas");

                    const graficoBarras = new Chart(canvasBarras, config)

                }).catch((error) => {
                    console.log("error")

                })


        }

        $(document).ready(() => {

            resumenVenta()
        })


    </script>

        }
}